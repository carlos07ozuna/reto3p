cantidad_usuarios = int(input("¿Cuántos nuevos usuarios desea registrar? "))
usuarios_registrados = []  # Create an empty list to store the user identifiers

for i in range(cantidad_usuarios):
    print("Registro de usuario #" + str(i+1))
    # Existing code for collecting user information

    # Generate unique user identifier
    user_id = i + 1  # Assuming user IDs start from 1 and increment by 1
    usuarios_registrados.append(user_id)  # Add the user ID to the list of registered users

# Print the list of user identifiers
print("Los identificadores de los usuarios registrados son: ")
for id in usuarios_registrados:
    print(id)
